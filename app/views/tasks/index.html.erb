  <tr>
    <th>Task ID</th>
    <th>Status</th>
    <th>Group</th>
    <th>Text</th>
    <th></th>
  </tr>
  <% for task in @tasks %>
    <tr>
      <td><%= task.id %></td>
      <td><%= task.status %></td>
      <td><%= task.group %></td>
      <td><%= task.text %></td>
